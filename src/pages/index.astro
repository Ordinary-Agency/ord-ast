---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const services = [
  {
    href: "/services/seo",
    title: "SEO Services",
    body: "Boost your website's visibility and rank higher on search engine results.",
  },
  {
    href: "/services/content-creation",
    title: "Content Creation",
    body: "Our team of expert writers and designers create engaging content to captivate your audience.",
  },
  {
    href: "/services/social-media-management",
    title: "Social Media Management",
    body: "We'll manage your social media accounts, keeping your audience engaged and growing.",
  },
  {
    href: "/services/web-design",
    title: "Web Design & Development",
    body: "Creating stunning and responsive websites that offer the best user experience.",
  },
]

---

<Layout title="Your Company Name - Digital Solutions">
  <header class="hero">
    <div class="hero-content">
      <h1>Welcome to Your Company Name</h1>
      <p>Perth's leading digital solutions agency.</p>
    </div>
  </header>
  
  <main>
    <div class="instructions">
      <p>
        We offer bespoke digital solutions to help you achieve your business goals.
      </p>
      <p class="mt-1">
        Whether it's building your online presence, nurturing customer relationships, or growing your revenue, 
        we have the expertise to deliver tailored strategies that will drive results.
      </p>
    </div>

    <section>
      <h2>Our Services</h2>
      <ul role="list" class="service-card-grid">
        {services.map( service => <Card {...service} /> )}
      </ul>
    </section>
    
    <section class="contact-us">
      <h2>Contact Us</h2>
      <p>Ready to take your business to the next level? <a href="/contact">Contact us</a> today.</p>
    </section>
  </main>
</Layout>

<style>
  /* Updated styles */
  body {
    font-family: 'Roboto', sans-serif;
    color: #333;
  }
  .hero {
    background-image: url('hero.jpg');
    background-size: cover;
    color: white;
    text-align: center;
    padding: 4rem 0;
    background-position: center;
  }
  .hero-content h1 {
    font-size: 3em;
    margin-bottom: 0.5em;
  }
  .hero-content p {
    font-size: 1.5em;
    font-weight: 300;
  }
  main {
    padding: 2em;
    max-width: 80ch;
    margin: auto;
  }
  .instructions {
    background-color: #f9f9f9;
    padding: 1.5em;
    border-radius: 5px;
    line-height: 1.6;
    margin-bottom: 2em;
  }
  h2 {
    font-size: 2em;
    font-weight: 700;
    color: #333;
    margin-bottom: 1em;
  }
  .service-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  .contact-us {
    text-align: center;
    padding: 4rem 0;
    background-color: #f9f9f9;
    border-radius: 5px;
  }
  .contact-us h2 {
    margin-bottom: 1em;
  }
  .contact-us a {
    display: inline-block;
    padding: 1em 2em;
    background-color: #333;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.3s;
  }
  .contact-us a:hover {
    background-color: #555;
  }
</style>
